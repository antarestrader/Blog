%div[post]
  .header
    %h2= link_to(post.title, resource(post))
    - if post.published_at
      .date
        %p.day= post.published_at.strftime("%A")
        %p.date= post.published_at.strftime("%b %d, %Y")
        %p.time= post.published_at.strftime("%l:%M %P")
    - unless post.categories.empty?
      .categories
        %h3 Filed Under:
        - post.categories.each do |category|
          %p= link_to(category.name,resource(category))
  .content
    .summary
      ~ post.summary
    %p.actions
      - if post.extended
        =link_to("read more",resource(post))
      =link_to("edit",resource(post,'edit'))